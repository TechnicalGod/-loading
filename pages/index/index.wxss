.container_wrap{
  height: 100%;
  background-color: #f5f5f5;
}
.container_wrap .listview{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  height: 200%;
  justify-content: space-around;
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.thumbnail{
  width: 330rpx;
  height: 520rpx;
  margin: 10rpx 0;
  border-radius: 2%;
  background: yellow;
}
.product_image{
  opacity: 0;
  width: 100%;
  height: 70%;
  transition: opacity 0.4s linear 0.4s;

}
.loaded{
  opacity: 1;
}